<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="431.0" prefWidth="566.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ModificaController">
   <children>
      <VBox prefHeight="441.0" prefWidth="581.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="581.0" text="MODIFICA MOVIMENTO" textFill="#9e0303">
               <font>
                  <Font name="Bodoni MT" size="22.0" />
               </font></Label>
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="581.0" spacing="20.0">
               <children>
                  <RadioButton fx:id="entrata" mnemonicParsing="false" prefHeight="34.0" prefWidth="117.0" text="Entrata">
                     <font>
                        <Font size="23.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="entraEsce" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="uscita" mnemonicParsing="false" prefHeight="34.0" prefWidth="121.0" selected="true" text="Uscita" toggleGroup="$entraEsce">
                     <font>
                        <Font size="23.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="581.0" spacing="5.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="86.0" text="Importo: ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="importo" prefHeight="31.0" prefWidth="183.0" promptText="Importo..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="57.0" prefWidth="581.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="90.0" text="Circuito: ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="circuito" prefHeight="31.0" prefWidth="187.0" promptText="Circuito..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="581.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="102.0" text="Categoria: ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="categoria" prefHeight="31.0" prefWidth="174.0" promptText="Categoria..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="581.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="100.0" text="Data: ">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="data" prefHeight="31.0" prefWidth="181.0" promptText="Data..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="89.0" prefWidth="581.0">
               <children>
                  <TextArea fx:id="descrizione" prefHeight="87.0" prefWidth="561.0" promptText="Descrizione..." wrapText="true" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="581.0" spacing="15.0">
               <children>
                  <Button fx:id="inserisci" mnemonicParsing="false" onAction="#modificaMovimento" prefHeight="51.0" prefWidth="153.0" text="MODIFICA">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="elimina" mnemonicParsing="false" onAction="#eliminaMovimento" prefHeight="51.0" prefWidth="147.0" text="ELIMINA">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="annulla" mnemonicParsing="false" onAction="#annulla" prefHeight="51.0" prefWidth="148.0" text="ANNULLA">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
